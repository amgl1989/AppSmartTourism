<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorFondo">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp">

            <TextView
                android:id="@+id/nombre"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="@string/nombre"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:background="@color/colorAccent"
                android:textColor="#ffffff"
                android:textSize="25dp"
                android:layout_alignParentTop="true"
                android:textStyle="bold"
                android:typeface="sans" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp">
            <ImageView
                android:id="@+id/ic_posicion"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:contentDescription="logo de posiciÃ³n"
                android:src="@drawable/brujula"
                android:layout_marginRight="108dp"
                android:elevation="10dp" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="@string/ubicacion"
                android:id="@+id/textView5"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/etxLongitud"
                android:layout_toStartOf="@+id/etxLongitud"
                android:textColor="#000000"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/etxLatitud"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="@string/latitud"
                android:textSize="16dp"
                android:layout_gravity="center_vertical"
                android:layout_below="@+id/textView5"
                android:layout_toLeftOf="@+id/etxLongitud"
                android:layout_toStartOf="@+id/etxLongitud"
                android:textColor="#2E2E2E" />
            <TextView
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:text=" - "
                android:layout_gravity="center_vertical"
                android:textSize="16dp"
                android:id="@+id/textView6"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/ic_posicion"
                android:layout_toEndOf="@+id/ic_posicion"
                android:textColor="#2E2E2E" />
            <TextView
                android:id="@+id/etxLongitud"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="@string/longitud"
                android:layout_gravity="center_vertical"
                android:textSize="16dp"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/ic_posicion"
                android:layout_toEndOf="@+id/ic_posicion"
                android:layout_marginLeft="35dp"
                android:layout_marginStart="35dp"
                android:textColor="#2E2E2E" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp">
            <ImageView
                android:id="@+id/ic_menu_info_details"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:contentDescription="logo de descripcion"
                android:src="@drawable/descripcion"
                android:layout_marginRight="8dp"
                android:elevation="10dp" />

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="@string/descripcion"
                android:id="@+id/textView2"
                android:textStyle="bold"
                android:textSize="18dp"
                android:layout_weight="0.39"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/ic_menu_info_details"
                android:layout_toEndOf="@+id/ic_menu_info_details"
                android:layout_marginBottom="5dp"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/descripcion"
                android:layout_width="145dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/descripcion"
                android:textSize="16dp"
                android:layout_below="@+id/textView2"
                android:layout_toRightOf="@+id/ic_menu_info_details"
                android:layout_marginBottom="5dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:textColor="#2E2E2E" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp">
            <ImageView
                android:id="@+id/icon_guiada"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:contentDescription="logo guiada"
                android:src="@drawable/guiada"
                android:elevation="10dp"
                android:layout_marginRight="8dp" />
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/guiada"
                android:id="@+id/cbxGuiada"
                android:layout_weight="0.09"
                android:clickable="false"
                android:textColor="#000000"
                android:textStyle="bold"
                android:typeface="sans"
                android:textSize="18dp"
                android:layout_alignBottom="@+id/icon_guiada"
                android:layout_toRightOf="@+id/icon_guiada"
                android:layout_toEndOf="@+id/icon_guiada" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp">
            <ImageView
                android:id="@+id/icon_reserva"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:contentDescription="logo reserva"
                android:src="@drawable/reservar"
                android:elevation="10dp"
                android:layout_marginRight="8dp" />
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/reserva"
                android:id="@+id/cbxReserva"
                android:layout_weight="0.09"
                android:clickable="false"
                android:textStyle="bold"
                android:textSize="18dp"
                android:layout_alignBottom="@+id/icon_reserva"
                android:layout_toRightOf="@+id/icon_reserva"
                android:layout_toEndOf="@+id/icon_reserva" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/icon_airelibre"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:contentDescription="logo aire libre"
                android:src="@drawable/airelibre"
                android:elevation="10dp"
                android:layout_marginRight="8dp" />
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/airelibre"
                android:id="@+id/cbxAireLibre"
                android:layout_weight="0.09"
                android:clickable="false"
                android:textColor="#000000"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_alignBottom="@+id/icon_airelibre"
                android:layout_toRightOf="@+id/icon_airelibre"
                android:layout_toEndOf="@+id/icon_airelibre" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp">
           <ImageView
                android:id="@+id/tipoTurismo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:contentDescription="logo tipo turismo"
                android:src="@drawable/tipoturismo"
                android:layout_marginRight="8dp"
                android:elevation="10dp" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tipoturismo"
                android:id="@+id/btnTypeTourism"
                android:layout_gravity="center_vertical"
                android:layout_toRightOf="@+id/tipoTurismo"
                android:layout_toEndOf="@+id/tipoTurismo"
                android:layout_marginBottom="5dp"
                android:textStyle="bold"
                android:textSize="16dp"
                android:textColor="#000000"
                android:backgroundTint="@color/colorBotonEfecto" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp">
            <ImageView
                 android:id="@+id/fechasHorarios"
                 android:layout_width="40dp"
                 android:layout_height="40dp"
                 android:contentDescription="logo horarios"
                 android:src="@drawable/horarios"
                 android:layout_marginRight="8dp"
                 android:elevation="10dp" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/horarios"
                android:id="@+id/btnFechasHorarios"
                android:layout_gravity="center_vertical"
                android:layout_toRightOf="@+id/fechasHorarios"
                android:layout_toEndOf="@+id/fechasHorarios"
                android:layout_marginBottom="5dp"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:backgroundTint="@color/colorBotonEfecto" />
        </RelativeLayout>

        <android.support.design.widget.FloatingActionButton android:id="@+id/btnMapaOfertasTuristica"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:src="@android:drawable/ic_dialog_map"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp" />
    </LinearLayout>
</ScrollView>












